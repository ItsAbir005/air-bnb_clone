<% layout("/layouts/boilerplate") %>

    <style>
        #filters {
            margin-top: 2rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-evenly;
            flex-wrap: wrap;
            /* Added flex-wrap for better responsiveness on smaller screens */
        }

        .filter {
            border: none;
            text-align: center;
            margin-left: 2rem;
            opacity: 0.7;
            cursor: pointer;
            /* Indicate it's clickable */
            padding: 0.5rem;
            /* Added padding for better click target */
        }

        .filter:hover {
            opacity: 1;
        }

        .filter a {
            /* Style for the links inside filters */
            text-decoration: none;
            color: inherit;
            /* Inherit color from parent for consistency */
            display: block;
            /* Make the entire link block clickable */
        }

        .setting:hover {
            height: 50px;
            border: 2px solid black;
            border-radius: 10px;
            padding: 0px 30px 0px;
            opacity: 1;
        }

        .border1 {
            padding: 10px 40px 40px;
        }

        .border1:hover {
            height: 50px;
            text-align: center;
            border-radius: 10px;
            border: 2px solid black;
        }

        .tax-info {
            display: none;
        }
    </style>

    <body>
        <div id="filters">
            <div class="filter">
                <i class="fa-solid fa-ticket-simple"></i>
                <p><a href="/listings?category=Icons">Icons</a></p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-mug-hot"></i>
                <p><a href="/listings?category=Bed&Breakfast">Bed&Breakfast</a></p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-cow"></i>
                <p><a href="/listings?category=Farm">Farm</a></p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-satellite"></i>
                <p><a href="/listings?category=OMG">OMG!</a></p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-snowflake"></i>
                <p><a href="/listings?category=Arctic">Arctic</a></p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-fire"></i>
                <p><a href="/listings?category=Trending">Trending</a></p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-water"></i>
                <p><a href="/listings?category=Lake">Lake</a></p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-umbrella-beach"></i>
                <p><a href="/listings?category=Beach">Beach</a></p>
            </div>
            <div class="filter setting">
                <i class="fa-solid fa-sliders"></i>
                <p>filters</p>
            </div>
            <div class="form-check-reverse border1 filter form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxces</label>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListing){ %>
                <a href="/listings/<%= listing._id %>" class="card-link">
                    <div class="card col listing-card">
                        <img class="card-img-top" src="<%= listing.image.url %>" alt="Card image cap"
                            style=" height: 18rem;">
                        <div class="card-body">
                            <p class="card-text-title">
                                <%= listing.title%>
                            </p>
                            <p class="card-text"><i class="fa fa-inr"></i>
                                <%= listing.price.toLocaleString("en-IN")%>/night
                                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
    </body>

    <script>
        let getswitch = document.getElementById("flexSwitchCheckDefault");
        console.log(getswitch);
        getswitch.addEventListener("click", () => {
            let element = document.getElementsByClassName("tax-info");
            for (info of element) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>